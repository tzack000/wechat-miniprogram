/**app.wxss**/
page {
  height: 100%;
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
}

.container {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn-primary {
  background-color: #07c160;
  color: #ffffff;
  border-radius: 8rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  text-align: center;
  border: none;
}

.btn-primary:active {
  background-color: #06ad56;
}

.btn-secondary {
  background-color: #ffffff;
  color: #07c160;
  border: 2rpx solid #07c160;
  border-radius: 8rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  text-align: center;
}

.btn-disabled {
  background-color: #e5e5e5;
  color: #999999;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 文本样式 */
.text-primary {
  color: #333333;
}

.text-secondary {
  color: #666666;
}

.text-hint {
  color: #999999;
  font-size: 28rpx;
}

.text-center {
  text-align: center;
}

/* 加载动画 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-text {
  margin-top: 24rpx;
  color: #999999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.3;
}

.empty-text {
  margin-top: 32rpx;
  color: #999999;
  font-size: 28rpx;
}
