/* pages/record/record.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 24rpx;
}

/* 引导提示 */
.guide-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.guide-content {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx;
  margin: 48rpx;
  max-width: 600rpx;
}

.guide-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 32rpx;
}

.guide-tips {
  margin-bottom: 32rpx;
}

.guide-tip {
  font-size: 28rpx;
  color: #666666;
  line-height: 48rpx;
  padding: 8rpx 0;
}

.guide-btn {
  background-color: #07c160;
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 32rpx;
  padding: 24rpx;
}

/* 录音卡片 */
.record-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

/* 计时器 */
.timer-section {
  text-align: center;
  margin-bottom: 32rpx;
}

.timer-display {
  font-size: 96rpx;
  font-weight: bold;
  color: #ffffff;
  font-family: 'Courier New', monospace;
  line-height: 1;
}

.timer-limit {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

/* 波形可视化 */
.waveform-container {
  height: 120rpx;
  margin: 32rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.waveform {
  display: flex;
  align-items: flex-end;
  justify-content: center;
  height: 100%;
  gap: 4rpx;
}

.wave-bar {
  width: 8rpx;
  min-height: 4rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 4rpx;
  transition: height 0.1s;
}

/* 录音状态 */
.status-container {
  text-align: center;
  margin: 32rpx 0;
}

.status-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  transition: transform 0.3s;
}

.status-icon.recording {
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

.status-text {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 控制按钮 */
.control-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.control-buttons button {
  flex: 1;
  border-radius: 12rpx;
  font-size: 32rpx;
  padding: 24rpx;
  border: none;
}

.btn-primary {
  background-color: #ffffff;
  color: #667eea;
}

.btn-secondary {
  background-color: rgba(255, 255, 255, 0.2);
  color: #ffffff;
}

.btn-large {
  width: 100%;
}

/* 参考文本 */
.reference-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.section-hint {
  font-size: 24rpx;
  color: #999999;
  font-weight: normal;
}

.reference-text {
  line-height: 48rpx;
}

.text-sentence {
  font-size: 28rpx;
  color: #666666;
  padding: 12rpx 0;
  transition: all 0.3s;
}

.text-sentence.active {
  color: #667eea;
  font-weight: bold;
  font-size: 30rpx;
  background-color: #f0f3ff;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  margin: 4rpx 0;
}

/* 质量检测 */
.quality-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.quality-score {
  font-size: 28rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.quality-score.pass {
  background-color: #e6f7e6;
  color: #07c160;
}

.quality-score.fail {
  background-color: #fff0f0;
  color: #ff4d4f;
}

.quality-content {
  margin-top: 16rpx;
}

.quality-issues {
  margin-bottom: 16rpx;
}

.quality-item {
  font-size: 28rpx;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}

.quality-item.success {
  background-color: #e6f7e6;
  color: #07c160;
}

.quality-item.warning {
  background-color: #fff7e6;
  color: #ff9800;
}

.quality-suggestion {
  font-size: 26rpx;
  color: #666666;
  padding: 16rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}

/* 录音信息 */
.info-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

/* 上传进度 */
.upload-progress {
  margin-top: 24rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.progress-bar {
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666666;
  display: block;
  text-align: center;
}
