/* 我的课程页面样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 标签栏 */
.tabs {
  display: flex;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #1aad19;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #1aad19;
  border-radius: 2rpx;
}

/* 预约列表 */
.booking-list {
  padding: 20rpx 30rpx;
}

.booking-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.booking-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.course-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.status {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.status-pending {
  background-color: #fff4e5;
  color: #ff9500;
}

.status-confirmed {
  background-color: #e8f4ea;
  color: #1aad19;
}

.status-cancelled {
  background-color: #f5f5f5;
  color: #999;
}

.status-completed {
  background-color: #e6f2ff;
  color: #1677ff;
}

.booking-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-row {
  display: flex;
  font-size: 26rpx;
}

.info-label {
  color: #999;
  min-width: 120rpx;
}

.info-value {
  color: #333;
  flex: 1;
}

.booking-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #e5e5e5;
}

.cancel-btn {
  background-color: #fff;
  color: #ff6b35;
  border: 1rpx solid #ff6b35;
}

/* 状态提示 */
.loading-status,
.no-more {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.go-booking-btn {
  background-color: #1aad19;
  color: #fff;
  border-radius: 44rpx;
  padding: 20rpx 60rpx;
}
