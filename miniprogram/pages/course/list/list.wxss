.loading-status,
.empty-status,
.no-more {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  display: block;
  color: #999;
  font-size: 28rpx;
}
