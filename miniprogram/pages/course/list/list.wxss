.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* ç­›é€‰æ  */
.filter-bar {
  background-color: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 10;
}

.type-scroll {
  white-space: nowrap;
}

.type-list {
  display: inline-flex;
  padding: 0 30rpx;
}

.type-item {
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  transition: all 0.3s;
}

.type-item.active {
  color: #fff;
  background-color: #1aad19;
}

/* è¯¾ç¨‹åˆ—è¡¨ */
.course-list {
  padding: 20rpx 30rpx;
}

.course-item {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.course-image {
  width: 100%;
  height: 360rpx;
}

.course-info {
  padding: 24rpx;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.course-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.course-type-tag {
  padding: 4rpx 16rpx;
  background-color: #e8f4ea;
  color: #1aad19;
  font-size: 22rpx;
  border-radius: 8rpx;
  margin-left: 16rpx;
}

.course-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.course-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.course-meta {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #999;
}

