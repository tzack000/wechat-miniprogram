.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 教练头部信息 */
.coach-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 40rpx;
  display: flex;
  align-items: center;
  color: #fff;
}

.coach-avatar-large {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-right: 32rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  background-color: #fff;
}

.coach-basic-info {
  flex: 1;
}

.coach-name-large {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.coach-title-large {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
}

.coach-rating {
  margin-top: 12rpx;
}

.rating-score {
  font-size: 28rpx;
  color: #ffd700;
  font-weight: bold;
}

/* 通用 Section 样式 */
.section {
  background-color: #fff;
  margin: 20rpx 20rpx 0;
  padding: 32rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 擅长领域 */
.specialties-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.specialty-badge {
  font-size: 26rpx;
  color: #667eea;
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-radius: 8rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.3);
}

/* 个人简介 */
.introduction-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #666;
  white-space: pre-wrap;
}

/* 资质证书 */
.certifications-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.certification-item {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
}

.cert-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #52c41a;
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.cert-text {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

/* 课程列表 */
.course-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.course-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.course-item:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.course-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  background-color: #e0e0e0;
}

.course-info {
  flex: 1;
  min-width: 0;
}

.course-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.course-type {
  display: inline-block;
  font-size: 22rpx;
  color: #667eea;
  padding: 4rpx 12rpx;
  background-color: rgba(102, 126, 234, 0.1);
  border-radius: 4rpx;
  margin-bottom: 8rpx;
}

.course-meta {
  display: flex;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #999;
}

.course-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.arrow-right {
  font-size: 48rpx;
  color: #ddd;
  margin-left: 16rpx;
}

/* 空课程状态 */
.empty-courses {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #999;
  z-index: 1000;
}
