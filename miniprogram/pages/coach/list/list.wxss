.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-input {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
}

/* 筛选标签 */
.filter-tabs {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
}

.filter-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
  white-space: nowrap;
}

.filter-scroll {
  flex: 1;
  white-space: nowrap;
}

.filter-tab {
  display: inline-block;
  padding: 12rpx 24rpx;
  margin-right: 16rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.filter-tab.active {
  background-color: #1989fa;
  color: #fff;
}

/* 教练列表 */
.coach-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.coach-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.coach-item:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.coach-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
  background-color: #f0f0f0;
}

.coach-info {
  flex: 1;
  min-width: 0;
}

.coach-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.coach-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 12rpx;
}

.coach-title {
  font-size: 24rpx;
  color: #999;
  padding: 4rpx 12rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
}

.coach-specialties {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.specialty-tag {
  font-size: 22rpx;
  color: #1989fa;
  padding: 4rpx 12rpx;
  background-color: rgba(25, 137, 250, 0.1);
  border-radius: 4rpx;
}

.coach-intro {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 8rpx;
}

.coach-rating {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.rating-score {
  font-size: 24rpx;
  color: #ff9800;
  font-weight: bold;
}

.rating-label {
  font-size: 22rpx;
  color: #999;
}

.arrow-right {
  font-size: 48rpx;
  color: #ddd;
  margin-left: 16rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 0;
  font-size: 28rpx;
  color: #999;
}
