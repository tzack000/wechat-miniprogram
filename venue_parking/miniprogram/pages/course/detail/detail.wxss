/* 课程详情页面样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 课程头图 */
.course-swiper {
  width: 100%;
  height: 500rpx;
}

.course-image {
  width: 100%;
  height: 100%;
}

/* 课程信息 */
.course-info {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.course-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.course-type {
  padding: 6rpx 16rpx;
  background-color: #e8f4ea;
  color: #1aad19;
  font-size: 24rpx;
  border-radius: 8rpx;
  margin-left: 16rpx;
}

.info-meta {
  display: flex;
  gap: 30rpx;
  margin-bottom: 20rpx;
}

.meta-item {
  font-size: 26rpx;
  color: #666;
}

.meta-item.price {
  color: #ff6b35;
  font-weight: bold;
  font-size: 32rpx;
}

.course-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 区块 */
.section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 教练列表 */
.coach-scroll {
  white-space: nowrap;
}

.coach-list {
  display: inline-flex;
}

.coach-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  background-color: #f5f5f5;
  transition: all 0.3s;
  min-width: 160rpx;
}

.coach-item.active {
  background-color: #e8f4ea;
  border: 2rpx solid #1aad19;
}

.coach-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 12rpx;
}

.coach-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.coach-title {
  font-size: 22rpx;
  color: #999;
}

/* 日期选择 */
.date-scroll {
  white-space: nowrap;
}

.date-list {
  display: inline-flex;
}

.date-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 16rpx;
  background-color: #f5f5f5;
  transition: all 0.3s;
  min-width: 140rpx;
}

.date-item.active {
  background-color: #1aad19;
  color: #fff;
}

.date-label {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.date-weekday {
  font-size: 24rpx;
  color: #999;
}

.date-item.active .date-weekday {
  color: rgba(255, 255, 255, 0.8);
}

/* 排期列表 */
.schedule-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.schedule-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: 16rpx;
  background-color: #f5f5f5;
  transition: all 0.3s;
}

.schedule-item.disabled {
  opacity: 0.5;
}

.schedule-time {
  flex: 1;
}

.time {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 6rpx;
}

.schedule-time .coach-name {
  font-size: 24rpx;
  color: #999;
}

.schedule-info {
  margin-right: 20rpx;
}

.seats {
  font-size: 26rpx;
  color: #1aad19;
}

.status-full {
  font-size: 26rpx;
  color: #999;
}

.schedule-action {
  padding: 12rpx 32rpx;
  background-color: #1aad19;
  color: #fff;
  border-radius: 32rpx;
  font-size: 28rpx;
}

.schedule-item.disabled .schedule-action {
  background-color: #e5e5e5;
  color: #999;
}

/* 空状态 */
.empty-status {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}
